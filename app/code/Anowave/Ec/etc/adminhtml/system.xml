                </field>
                <field id="content_background_color" translate="label" type="textarea" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Background color</label>
                    <frontend_model>Anowave\Ec\Block\Field\Color</frontend_model>
                    <depends>
                    	<field id="ec/cookie/enable">1</field>
                    </depends>
