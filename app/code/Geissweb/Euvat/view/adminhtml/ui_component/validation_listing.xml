<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">validation_listing.euvat_validation_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>euvat_validation_columns</spinner>
        <deps>
            <dep>validation_listing.euvat_validation_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="euvat_validation_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">validation_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Geissweb_Euvat::validation_list</aclResource>
        <dataProvider name="euvat_validation_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>validation_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="euvat_validation_columns">
        <!--
        <selectionsColumn name="ids">
            <settings>
                <indexField>validation_id</indexField>
            </settings>
        </selectionsColumn>
        -->
        <column name="validation_id">
            <settings>
                <filter>text</filter>
                <sorting>desc</sorting>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="vat_id">
            <settings>
                <filter>text</filter>
                <label translate="true">VAT Number</label>
            </settings>
        </column>
        <column name="vat_is_valid">
            <settings>
                <filter>text</filter>
                <label translate="true">Is Valid</label>
            </settings>
        </column>
        <column name="vat_request_success">
            <settings>
                <filter>text</filter>
                <label translate="true">Request success</label>
            </settings>
        </column>
        <column name="request_message">
            <settings>
                <filter>text</filter>
                <label translate="true">Request Message</label>
            </settings>
        </column>
        <column name="vat_request_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Request ID</label>
            </settings>
        </column>
        <column name="vat_request_date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Request Date</label>
            </settings>
        </column>
        <column name="vat_trader_name">
            <settings>
                <filter>text</filter>
                <label translate="true">Trader Name</label>
            </settings>
        </column>
        <column name="vat_trader_address">
            <settings>
                <filter>text</filter>
                <label translate="true">Trader Address</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Geissweb\Euvat\Ui\Component\Listing\Column\ValidationActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">validation_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
