<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:DataObject/etc/fieldset.xsd">
    <scope id="global">
        <fieldset id="customer_address">
            <field name="vat_id">
                <aspect name="to_quote_address" />
            </field>
            <field name="vat_trader_name">
                <aspect name="to_quote_address" />
                <aspect name="to_customer_address" />
                <aspect name="create" />
                <aspect name="update" />
                <aspect name="name" />
            </field>
            <field name="vat_trader_address">
                <aspect name="to_quote_address" />
                <aspect name="to_customer_address" />
                <aspect name="create" />
                <aspect name="update" />
                <aspect name="name" />
            </field>
        </fieldset>
        <fieldset id="sales_convert_quote_address">
            <field name="vat_trader_name">
                <aspect name="to_order_address" />
                <aspect name="to_customer_address" />
            </field>
            <field name="vat_trader_address">
                <aspect name="to_order_address" />
                <aspect name="to_customer_address" />
            </field>
            <field name="vat_is_valid">
                <aspect name="to_order_address" />
                <aspect name="to_customer_address" />
            </field>
            <field name="vat_request_success">
                <aspect name="to_order_address" />
                <aspect name="to_customer_address" />
            </field>
            <field name="vat_request_id">
                <aspect name="to_order_address" />
                <aspect name="to_customer_address" />
            </field>
            <field name="vat_request_date">
                <aspect name="to_order_address" />
                <aspect name="to_customer_address" />
            </field>
        </fieldset>
        <fieldset id="sales_copy_order_billing_address">
            <field name="vat_id">
                <aspect name="to_order" />
            </field>
            <field name="vat_trader_name">
                <aspect name="to_order" />
            </field>
            <field name="vat_trader_address">
                <aspect name="to_order" />
            </field>
            <field name="vat_is_valid">
                <aspect name="to_order" />
            </field>
            <field name="vat_request_success">
                <aspect name="to_order" />
            </field>
            <field name="vat_request_id">
                <aspect name="to_order" />
            </field>
            <field name="vat_request_date">
                <aspect name="to_order" />
            </field>
        </fieldset>
        <fieldset id="sales_copy_order_shipping_address">
            <field name="vat_id">
                <aspect name="to_order" />
            </field>
            <field name="vat_trader_name">
                <aspect name="to_order" />
            </field>
            <field name="vat_trader_address">
                <aspect name="to_order" />
            </field>
            <field name="vat_is_valid">
                <aspect name="to_order" />
            </field>
            <field name="vat_request_success">
                <aspect name="to_order" />
            </field>
            <field name="vat_request_id">
                <aspect name="to_order" />
            </field>
            <field name="vat_request_date">
                <aspect name="to_order" />
            </field>
        </fieldset>
        <fieldset id="order_address">
            <field name="vat_trader_name">
                <aspect name="to_customer_address" />
            </field>
            <field name="vat_trader_address">
                <aspect name="to_customer_address" />
            </field>
        </fieldset>
    </scope>
</config>
