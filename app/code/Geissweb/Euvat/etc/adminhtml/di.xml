<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Notification\MessageList">
        <arguments>
            <argument name="messages" xsi:type="array">
                <item name="euvat_setup_notice" xsi:type="string">Geissweb\Euvat\Model\System\SetupNotice</item>
            </argument>
        </arguments>
    </type>
    <preference for="Magento\Customer\Block\Adminhtml\Sales\Order\Address\Form\Renderer\Vat"
                type="Geissweb\Euvat\Block\Adminhtml\SalesOrderAddressFormRendererVat"/>

    <!-- Plugin for customer_address_form (M2.3.1+) -->
    <type name="Magento\Framework\View\Element\UiComponent\Processor">
        <plugin name="Geissweb_FieldVatId" type="Geissweb\Euvat\Plugin\Adminhtml\Form\CustomerAddress" sortOrder="10" disabled="false" />
    </type>
</config>
