<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="OSCConfigurationPageLayoutModernThreeColumns">
        <annotations>
            <features value="Customize Checkout via admin"/>
            <stories value="Check Checkout Page Layout Modern With 3 Columns"/>
            <title value="Check Checkout Page Layout Modern"/>
            <description value="Check Checkout Page Layout Modern With 3 Columns on the OSC"/>
            <severity value="CRITICAL"/>
            <testCaseId value="OSC-MFTF-0205"/>
            <group value="Amasty"/>
            <group value="OSC"/>
            <group value="Checkout"/>
            <group value="OSCConfiguration"/>
            <group value="OSCConfigurationDesignLayout"/>
        </annotations>

        <before>
            <!-- Create Data for Test and Configuration setting-->
            <createData entity="_defaultCategory" stepKey="createCategory"/>
            <createData entity="SimpleProductByJoustDuffleBag" stepKey="createFirstSimpleProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin1"/>
            <actionGroup ref="AdminConfigOSCGeneral" stepKey="ConfigurationGeneralSetting"/>
            <actionGroup ref="AdminConfigOSCDesignLayoutModern" stepKey="ConfigurationOSCDesignSetting">
                <argument name="adminSettingOSCDesignLayout" value="SetDesignModernThreeColumn"/>
            </actionGroup>
        </before>

        <after>
            <!-- Delete Created Data and Return Default Setting after Test -->
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createFirstSimpleProduct" stepKey="deleteFirstSimpleProduct"/>
            <actionGroup ref="AdminConfigOSCDesignLayoutClassic" stepKey="ReturnDefaultConfigOSCDesignSetting"/>
            <amOnPage url="admin/admin/auth/logout/" stepKey="amOnLogoutPage"/>
        </after>

        <!--Add Product to Cart-->
        <actionGroup ref="AddCreatedProductToCart" stepKey="AddProductToCart">
            <argument name="valueQty" value="_enterQty1"/>
            <argument name="product" value="$$createFirstSimpleProduct$$"/>
        </actionGroup>
        <!-- Check OSC Design and Check Totals -->
        <actionGroup ref="StorefrontOSCCheckDesignModernThreeColumns" stepKey="CheckOSCDesignIsClassic2Columns"/>
        <actionGroup ref="StorefrontOSCCheckOnlySubtotal" stepKey="CheckTotals">
            <argument name="oneStepCheckoutData" value="OSCConfigurationPageLayoutModernThreeColumns"/>
        </actionGroup>

    </test>
</tests>